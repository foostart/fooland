<!DOCTYPE html>
<html>
  <head>
    <title>Demo Nodejs Real Estate</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <form action="/" method="POST" class="col-md-4 col-sm-push-4">
      <div class="form-group">
        <label for="selSite">Chọn Site:</label>
        <select class="form-control" id="selSite">
          <% for(var i = 0; i < arraySite.length; i++){ %>
          <option value="<%= arraySite[i].site_id %>"><%= arraySite[i].site_name %></option>
          <% } %>
        </select>
      </div>

      <div class="form-group">
        <label for="selProvince">Chọn Tỉnh/Thành Phố:</label>
        <select class="form-control" id="selProvince">
          <% for(var i = 0; i < arrayProvince.length; i++){ %>
          <option value="<%= arrayProvince[i].province_id %>"><%= arrayProvince[i].province_name %></option>
          <% } %>
        </select>
      </div>

      <div class="form-group">
        <label for="selDistrict">Chọn Quận/Huyện:</label>
        <select class="form-control" id="selDistrict">
            <option value="-1">--- Chọn Quận/Huyện ---</option>
            <% for(var i = 0; i < arrayDistrict.length; i++){ %>
              <option value="<%= arrayDistrict[i].district_id %>"><%= arrayDistrict[i].district_name %></option>
              <% } %>
        </select>
      </div>

      <div class="form-group">
        <label for="selWard">Chọn Phường/Xã:</label>
        <select class="form-control" id="selWard">
            <option value="-1">--- Chọn Phường/Xã: ---</option>
        </select>
      </div>

      <div class="form-group">
        <label for="pages">Nhập số trang cần lấy:</label>:</label>
        <input type="number" class="form-control" id="pages">
      </div>

      <button type="button" class="btn btn-success" id="btnSearch">Tìm kiếm</button>
    </form>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
